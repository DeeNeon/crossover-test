body
  background-color #cfcfcf

//ngView animation
.fade
  position absolute
  top 0
  left 0
  right 0
  height 100%
  opacity 1
  &.ng-enter
    opacity 0
  &.ng-enter-active
    opacity 1
  &.ng-leave
    opacity 1
  &.ng-leave-active
    opacity 0

.fade.ng-enter,
.fade.ng-leave
  -webkit-transition all 1s ease
  transition all 1s ease

.container-wrapper
  margin-top 100px

//Repeater filter animation
.animate-repeat.ng-move,
.animate-repeat.ng-enter,
.animate-repeat.ng-leave
  transition all linear 0.4s

.animate-repeat.ng-leave.ng-leave-active,
.animate-repeat.ng-move,
.animate-repeat.ng-enter
  opacity 0

.animate-repeat.ng-leave,
.animate-repeat.ng-move.ng-move-active,
.animate-repeat.ng-enter.ng-enter-active
  opacity 1

video
  object-fit cover

footer
  color #0a0a0a
  width 100%
  height 40px
  background-color transparent
  position fixed
  bottom 0
  p
    line-height 40px

.btn-primary
  border-color #474c50
  background-color #474c50

.fa-spinner
  font-size 5em

.spinner
  position absolute
  top 50%
  left 50%

